    <script>
        // ==========================================
        // منطقة تعديل البيانات (حدث الأرقام من هنا)
        // ==========================================
        const targetBags = 50; // عدد الشنط المستهدف الكلي
        
        const itemsData = [
            {
                id: 1,
                name: "أرز (1 كجم)",
                icon: "fa-bowl-rice",
                target: 50 * 2, // مثلا نحتاج 2 كيلو لكل شنطة
                collected: 25,  // <--- غير هذا الرقم عند استلام سلع جديدة
                priceRange: "30 - 35 جنيه",
                tips: "يفضل الأرز المصري عريض الحبة (الضحى، الساعة، أو السائب درجة أولى)."
            },
            {
                id: 2,
                name: "سكر (1 كجم)",
                icon: "fa-cubes-stacked",
                target: 50 * 2,
                collected: 40, // <--- غير هذا الرقم
                priceRange: "27 - 35 جنيه",
                tips: "تأكد من أن الكيس محكم الغلق."
            },
            {
                id: 3,
                name: "زيت خليط (700 مل)",
                icon: "fa-bottle-droplet",
                target: 50,
                collected: 10, // <--- غير هذا الرقم
                priceRange: "60 - 75 جنيه",
                tips: "أنواع مثل (هدية، قلية، حلوة) مقبولة جداً."
            },
            {
                id: 4,
                name: "مكرونة (400 جم)",
                icon: "fa-wheat-awn",
                target: 50 * 3, // 3 أكياس للشنطة
                collected: 80, // <--- غير هذا الرقم
                priceRange: "12 - 15 جنيه",
                tips: "يفضل التنويع بين الخواتم والاسباجيتي (الملكة، إيطاليانو)."
            },
            {
                id: 5,
                name: "سمن نباتي (700 جم)",
                icon: "fa-jar",
                target: 50,
                collected: 5, // <--- غير هذا الرقم
                priceRange: "90 - 110 جنيه",
                tips: "روابي، جنة، أو كريستال."
            },
            {
                id: 6,
                name: "شاي (40 جم)",
                icon: "fa-mug-hot",
                target: 50,
                collected: 50, // اكتملت
                priceRange: "10 - 12 جنيه",
                tips: "العروسة أو ليبتون."
            },
            {
                id: 7,
                name: "صلصة (300 جم)",
                icon: "fa-utensils",
                target: 50,
                collected: 20,
                priceRange: "20 - 25 جنيه",
                tips: "برطمان زجاجي أو صفيح."
            },
            {
                id: 8,
                name: "تمر (1 كجم)",
                icon: "fa-calendar-day", // بديل للتمر
                target: 50,
                collected: 0,
                priceRange: "40 - 60 جنيه",
                tips: "تمر ناشف أو نصف جاف صالح للاستخدام."
            }
        ];

        // ==========================================
        // كود تشغيل الصفحة (لا تعدل هنا إلا لو فاهم JS)
        // ==========================================

        const grid = document.getElementById('itemsGrid');
        const modal = document.getElementById('itemModal');
        
        // دالة رسم العناصر
        function renderItems() {
            grid.innerHTML = '';
            itemsData.forEach(item => {
                const percent = Math.min(100, Math.round((item.collected / item.target) * 100));
                const remaining = item.target - item.collected;
                const isCompleted = item.collected >= item.target;
                
                // لون البار يتغير لو اكتمل
                const barColor = isCompleted ? '#28a745' : 'linear-gradient(90deg, var(--accent-color), var(--primary-color))';

                const card = document.createElement('div');
                card.className = 'item-card';
                card.onclick = () => openModal(item);

                card.innerHTML = `
                    ${isCompleted ? '<div class="completed-badge">تم الاكتفاء <i class="fas fa-check"></i></div>' : ''}
                    <div class="item-header">
                        <div class="item-title">${item.name}</div>
                        <i class="fas ${item.icon} item-icon"></i>
                    </div>
                    
                    <div class="status-text">
                        <span>تم تجميع: <strong>${item.collected}</strong></span>
                        <span>مطلوب: <strong>${item.target}</strong></span>
                    </div>

                    <div class="progress-container">
                        <div class="progress-bar" style="width: ${percent}%; background: ${barColor}">
                            ${percent > 10 ? percent + '%' : ''}
                        </div>
                    </div>

                    <div style="text-align: left; font-size: 0.9rem; color: ${remaining === 0 ? '#28a745' : '#d9534f'}">
                        ${remaining > 0 ? `باقي ${remaining} قطعة` : 'اكتمل العدد، جزاكم الله خيراً'}
                    </div>

                    <div class="click-hint">اضغط للتفاصيل والأسعار</div>
                `;
                grid.appendChild(card);
            });
        }

        // دالة فتح المودال
        function openModal(item) {
            document.getElementById('modalTitle').innerText = item.name;
            document.getElementById('modalPrice').innerText = item.priceRange;
            document.getElementById('modalTips').innerText = item.tips;
            document.getElementById('modalDesc').innerText = `نحتاج لتجميع إجمالي ${item.target} وحدة لتغطية ${targetBags} شنطة. حالياً تم تجميع ${item.collected} وحدة.`;
            
            modal.style.display = 'flex';
        }

        function closeModal() {
            modal.style.display = 'none';
        }

        // إغلاق المودال عند الضغط في الخارج
        window.onclick = function(event) {
            if (event.target == modal) {
                closeModal();
            }
        }

        // تشغيل الدالة عند التحميل
        renderItems();
    </script>
</body>
